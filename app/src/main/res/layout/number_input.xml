<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".UnlimitedGameActivity">



    <Button
        android:text="8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/eight"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/seven"
        app:layout_constraintLeft_toRightOf="@+id/seven" />
    <Button
        android:text="9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/nine"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/eight"
        app:layout_constraintLeft_toRightOf="@+id/eight"/>

    <Button
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/seven"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/eight"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/five" android:textAlignment="center"
        android:textSize="24sp" app:layout_constraintLeft_toRightOf="@+id/four"
        android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/eight"/>
    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/six" android:textAlignment="center"
        android:textSize="24sp" android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nine" app:layout_constraintLeft_toRightOf="@+id/five"/>

    <Button
        android:text="4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/four" android:textAlignment="center"
        android:textSize="24sp" android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>
    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/two"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/one"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/five"/>
    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/three"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/two"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/six"/>
    <ImageView
        android:text="enter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/enter"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/enter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        />
    <ImageView
        android:text="back"
        android:src="@drawable/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/back"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/six"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/enter"
        app:layout_constraintBottom_toTopOf="@+id/home"/>
    <ImageView
        android:src="@drawable/home"
        android:text="home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/home"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/three"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/one"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/four"/>

    <Button
        android:text="0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/zero"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/one"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/one"/>




</androidx.constraintlayout.widget.ConstraintLayout>